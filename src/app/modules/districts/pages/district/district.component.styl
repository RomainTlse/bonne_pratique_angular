@import 'variables';

.section--district
  width 100%
  height calc(100vh - 75px)
  padding 50px 15px 15px

  .section--menu
    width 100px
    height 100%
    padding-right 15px
    background-image url("src/assets/images/bg-menu.png")
    overflow hidden
    position relative

    &::before
      background-color $backgroundOpacity
      content ''
      z-index 0
      opacity 0.9
      position absolute
      top 0
      left 0
      width 100%
      height 100%

  .section--district--conteneur
    width calc(100% - 115px)
